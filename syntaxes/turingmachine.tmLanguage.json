{
	"name": "Turing Machine",
	"patterns": [
		{ "include": "#tape"},
		{ "include": "#finalStates"},
		{ "include": "#instruction" },
		{ "include": "#state"},
		{ "include": "#value"}
	],
	"repository": {
		"instruction": {
			"patterns": [
				{ "include": "#statement" }, 
				{ "include": "#comment" }
			]
		},
		"tape": {
			"patterns": [ { "include": "#state"}, { "include": "#value"} ],
			"match": "\\s*\\{(#value)*(#state)(#value)+\\};",
			"name": "keyword.tape"
		},
		"finalStates": {
			"patterns": [ { "include": "#state"} ],
			"match": "\\s*\\#define\\s*F\\s*=\\{#state(,(#state))*\\}",
			"name": "keyword.finalStates"
		},
		"value": {
			"match": "\\s*(0|1)\\s*",
			"name": "keyword.value"
		},
		"statement": {
			"patterns": [ { "include": "#state"} ],
			"match": "\\s*\\(\\s*(#state)\\s*,\\s*(0|1)\\s*,\\s*(0|1)\\s*,\\s*(H|L|R)\\s*,\\s*(#state)\\s*\\);",
			"name": "keyword.statement"
		},
		"comment": {
			"match": "//.*$",
			"name": "comment"
		},
		"state": {
			"match": "\\s*([A-Za-z]+[0-9])\\s*",
			"name": "keyword.state"
		}
	},
	"scopeName": "source.tm"
}