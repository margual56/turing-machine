{
    "$schema": "vscode://schemas/color-theme",
    "name": "Dark (Visual Studio)",
    "type": "dark",
    "semanticHighlighting": true,
    // https://github.com/microsoft/vscode/blob/master/extensions/theme-defaults/themes/dark_vs.json
    "tokenColors": [
        {
            "scope": "keyword.state",
            "settings": {
                "foreground": "#d1ca66",
				"fontStyle": "bold"
            }
        },
        {
            "scope": "keyword.statement",
            "settings": {
                "foreground": "#ffffff"
            }
        },
        {
            "scope": "keyword.value",
            "settings": {
                "foreground": "#ffffff"
            }
        },
        {
            "scope": "comment",
            "settings": {
                "foreground": "#49cf8c"
            }
        },
        {
            "scope": "keyword.action",
            "settings": {
                "foreground": "#ecb9e4"
            }
        },
		{
			"scope":"keyword.finalStates",
			"settings": {
				"foreground": "#bdffdb",
				"fontStyle": "italic"
			}
		},
		{
			"scope":"keyword.tape",
			"settings": {
				"foreground": "#ecf2ff",
				"fontStyle": "underline"
			}
		}
    ]
}